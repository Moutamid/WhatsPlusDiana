<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="FullScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:ignore="NewApi">shortEdges</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!--        <item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--        <item name="android:enforceNavigationBarContrast" tools:ignore="NewApi">false</item>-->
    </style>

    <style name="AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/textsize_12</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">#FFEB3B</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">#8BC34A</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
<style name="Theme.AppCompat." parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/primaryColor</item>
    <item name="colorAccent">@color/colorAccent</item>

    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="fontFamily">@font/regular</item>
    <item name="font">@font/regular</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:windowLightStatusBar">true</item>
</style>

    <style name="ThemeWithRoundShape">
        <item name="android:windowBackground">@drawable/round_white_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="nLinearLayout_Main_Option">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:foreground">@drawable/ic_ripple_circul</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="nText_10SP">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/textsize_18</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="textExtras">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_marginStart">@dimen/_20dp</item>
        <item name="android:layout_marginEnd">@dimen/_20dp</item>
        <item name="android:layout_marginTop">@dimen/_20dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">@drawable/ic_ripple_both_radius</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/_20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
    </style>

    <style name="nText_16SP">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize_16</item>
    </style>

    <style name="nText_12SP">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_12</item>
    </style>

    <style name="BannerAdsView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="Text_24SP">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize_24</item>
    </style>


    <dimen name="margin_12">12dp</dimen>
    <dimen name="margin_5">5dp</dimen>
    <dimen name="textsize_18">18sp</dimen>
    <dimen name="textsize_16">16sp</dimen>
    <dimen name="textsize_12">12sp</dimen>
    <dimen name="textsize_24">24sp</dimen>
    <string name="ad_attribution">ad</string>

    <style name="SlidingDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>
</resources>
